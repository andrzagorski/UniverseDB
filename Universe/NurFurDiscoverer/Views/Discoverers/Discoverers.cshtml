@using Universe.Models.discoverer;
@model IQueryable<Discoverer>

<div class="discoverers-container">
    <h1>Wszyscy zarejestrowani odkrywcy</h1>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var discoverer in Model)
                {
                    <tr>
                        <td>@discoverer.Name</td>
                        <td>@discoverer.Surname</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
